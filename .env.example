APP_NAME=Modular Monolith API
APP_VERSION=1.0.0
DEBUG=True
TESTING=False
ENVIRONMENT=development

# System
SERVER_URL="http://localhost:8000"

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/modular_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# API
API_V1_PREFIX=/api/v1
API_V2_PREFIX=/api/v2

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=change-this-secret-key-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# REDIS
REDIS_USERNAME="modular_db"
REDIS_PASSWORD="123456789"
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"
REDIS_DB0="0"

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["pdf","doc","docx","xls","xlsx","png","jpg","jpeg"]
